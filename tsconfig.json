{
	"version": "2.4.2",
    "display": "Node 14",

	"compilerOptions": {
		"lib": ["es2020", "DOM"],
		"target": "es2020",
		"outDir": "./built",
		"module": "commonjs",
		"incremental": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true, // needed for imports in code generated by typegraphql-prisma
		"sourceMap": true,
		"baseUrl": ".",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"*": ["../node_modules/*"]
		},
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ]
}
