{
	"version": "2.4.2",
	"compilerOptions": {
		"lib": ["es5", "es6", "DOM"],
		"target": "es6",
		"outDir": "./built",
		"module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
		"paths": {
			"*": ["../node_modules/*"]
		}
    },
    "exclude": [
        "node_modules"
    ]
}